@model ProjectPool.Models.EmpProfileModel

@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Detail</title>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Jost' rel='stylesheet'>

    <link rel="stylesheet" href="~/css/ProjectDetail.css">
    <link rel="stylesheet" href="~/css/ProfileDetails.css">

    <style>
    </style>

</head>
<body>


    <div class="content">

        @*<input hidden id="ProjectID" name="ProjectID" asp-for="ProjectID" />*@
        
        <div class="row gutters-sm">
            <div class="col-md-5 mb-3">
                <!-- contact -->
                <div class="card">
                    <div class="card-body m-2">
                        <div class="d-flex flex-column">
                            <!-- <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150"> -->
                            <div class="mt-3">

                                <p id="company" class="h5 font-weight-bold mb-4">@Html.DisplayFor(model => model.CompanyName)</p>
                                <p>@Html.DisplayFor(model => model.FullName)</p>
                                <p>@Html.DisplayFor(model => model.ProfileDesc)</p>

                                @if (!Model.isCon)
                                {
                                    <a href='@Url.Action("EditEmpProfile","Profile", new { id = Model.EmployerID })' class="edit-link">Edit Profile Details</a>

                                }
                            </div>
                        </div>
                        <hr>
                        <div class="mb-3">
                            <table class="d-table" style="width:100%">
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Phone)</td>
                                    <td>@Html.DisplayFor(model => model.Phone)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Address)</td>
                                    <td>@Html.DisplayFor(model => model.Address)</td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </div>


            </div>

            <div class="col-md-7">
                <p id="open-title" class="h4 font-weight-bold"><span style="padding-right:10px"><i style="color: #5bd76e; font-size: 20px;" class="fa-solid fa-circle-dot"></i></span>Open Projects</p>
                <div class="row gutters-sm">

                    @{
                        if (ViewData["ActiveProject"] != "0")
                        {
                            foreach (var item in ViewData["ActiveProject"] as IEnumerable<EmpProfileModel>)
                            {
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <!-- description -->
                                    <div class="card no-border sm-card mb-3">
                                        <div class="card-body">
                                            <div class="project-desc">
                                                <div class="h4 text-black font-weight-bold mb-3">@item.Title</div>
                                                <p class="p-sub" id="p-desc">@item.Description</p>
                                                <p class="p-sub m-0">RM&nbsp;@item.Cost</p>
                                                <p class="p-sub">@item.Duration</p>
                                                <div class="grey-label">
                                                    <a href="">@item.CategoryName</a>
                                                    <a href="">@item.SubCategoryName</a>
                                                    @foreach (var sl in item.Skills)
                                                    {
                                                        <a href="">@sl</a>
                                                    }
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        }

                    }

                </div>




            </div>


            </div>
    </div>

</body>
</html>