@model ProjectPool.Models.SignUpModel

@{
    Layout = null;
    ViewBag.Title = "Login to your account | ProjectPooL.";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Jost' rel='stylesheet'>
    <!-- Icon -->
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <!-- CSS-->
    <link rel="stylesheet" href="~/css/NavRegister.css">
    <link rel="stylesheet" href="~/css/Account.css">
   

</head>
<body>
    <header>
        <p>ProjectPooL.</p>
        <nav>
            <ul class="nav-title">
                <li><a href="Overview">Overview</a></li>
                <li><a href="ProjectList">Projects</a></li>
                <li><a href="ContractorList">Contractor</a></li>
            </ul>
        </nav>
        <div class="account">
            <a href="Login"><span>Log In</span></a>
            <a class="cta" href="SignUp"><button>Sign Up now</button></a>
        </div>
    </header>

    <div class="container" id="container">

        <div class="form-container login-container">
            <form asp-action="Login">
                <h1>Login</h1>

                <input type="email" placeholder="Email" />
                <input type="password" placeholder="Password" />
                <a href="#">Forgot your password?</a>
                <button>Login</button>
            </form>
        </div>
        <div class="overlay-container-login">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp" onclick="location.href='@Url.Action("SignUp", "Account")'">Sign Up</button>
                </div>
            </div>
        </div>
    </div>


</body>
</html>