@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Details</title>

    <!-- icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Jost' rel='stylesheet'>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/ProjectDetail.css">
    <link rel="stylesheet" href="~/css/Dashboard.css">

</head>
<body>

    <nav class="navbar">
        <h2 class="narbar-logo"><a href="">ProjectPool</a></h2>
        <div class="navbar-menu">
            <a href="">Overview</a>
            <a href="ProjectList">Projects</a>
            <a href="ContractorProfile">Students</a>
            <a href="Login">Login</a>
            <a href="Signup">Sign Up</a>
            <a href="Dashboard">Dashboard</a>
        </div>
        <div class="menu-toggle">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
    </nav>

    <div class="main-body">

        <!-- project title -->
        <div class="row gutters-sm">
            <div class="col-12">
                <div class="h2 text-black font-weight-bold mb-3 dashboard">My Dashboard</div>
            </div>
        </div>

        <div class="row gutters-sm">

            <!-- Projects -->
            <div class="col-md-6">
                <!-- pending project -->
                <div class="card no-border card-box p-0">
                    <div class="card-body">
                        <div class="card no-border-grey mb-3 title">
                            <h4 class="text-black ">Pending projects</h4>
                        </div>
                        <div class="card no-border title-list">
                            <h5>You don't have any pending projects</h5>
                            <hr>
                        </div>
                        <div class="more">
                            <a href="">More..</a>
                        </div>

                    </div>
                </div>

                <!-- running project  -->
                <div class="card no-border card-box p-0">
                    <div class="card-body">
                        <div class="card no-border-grey mb-3 title">
                            <h4 class="text-black">Running projects</h4>
                        </div>
                        <div class="card no-border title-list">
                            <h5>You don't have any running projects</h5>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Interview -->
            <div class="col-md-6">
                <!-- interview invitation -->
                <div class="card no-border m-0 p-0">
                    <div class="card-body">
                        <div class="card no-border-grey mb-3 title">
                            <h4 class="text-black ">Interview session</h4>
                        </div>
                        <div class="card no-border title-list">
                            <h5>You don't have any interview session</h5>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

    </div>

</body>
</html>