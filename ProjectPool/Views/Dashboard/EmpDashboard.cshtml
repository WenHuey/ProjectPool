@model ProjectPool.Models.DashboardModel

@{
    ViewData["Title"] = "Dashboard | ProjectPooL.";

    var projectCount = ViewData["ProjectCount"] as DashboardModel;

    bool hasActive = false;
    bool hasRunning = false;
    bool hasPending = false;
    bool hasInterview = false;
    bool hasApplication = false;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <!-- Bootstrap & Jquery -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- CSS -->
    @*<link rel="stylesheet" href="~/css/NavProfile.css">*@
    <link rel="stylesheet" href="~/css/ProjectDetail.css">
    <link rel="stylesheet" href="~/css/Dashboard.css">
    <!-- icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Jost' rel='stylesheet'>

</head>
<body>

    <div class="main-body">

        <!-- project title -->
        <div class="row gutters-sm">
            <div class="col-12">
                <div class="text-black font-weight-bold dashboard">My Dashboard</div>
            </div>
        </div>
        @*<form asp-action="EmpDashboard" method="post">*@
            <div class="row gutters-sm">

                @{
                    @*var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
                    var userID = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.Sid).Value;
                    <input id="userID" name="userID" asp-for="UserId" value=@userID />*@
                }
                @{
                    if (projectCount.ActiveCount >= 1)
                    {
                        hasActive = true;
                    }
                    if (projectCount.RunningCount >= 1)
                    {
                        hasRunning = true;
                    }
                    if (projectCount.PendingCount >= 1)
                    {
                        hasPending = true;
                    }
                    if (projectCount.InterviewCount >= 1)
                    {
                        hasInterview = true;
                    }
                    if (projectCount.ApplicationCount >= 1)
                    {
                        hasApplication = true;
                    }

                }

                <!-- Projects -->
                <div class="col-md-6">
                    <!-- projetc application -->
                    <div class="card no-border card-box p-0">
                        <div class="card-body">
                            <div class="card no-border-grey mb-3 title">
                                <a asp-controller="EmployerDashboardController" asp-action=""><p class="text-black">Project Application Request</p></a>
                            </div>
                            @{
                                if (projectCount != null)
                                {
                                    if (hasApplication)
                                    {
                                        <p>has Application</p>
                                    }
                                    else
                                    {
                                        <div class="card no-border title-list">
                                            <p>You don't have any application request</p>
                                            <hr>
                                        </div>
                                        <div class="more">
                                            <a href="companymanageproject.html">More..</a>
                                        </div>
                                    }
                                }
                            }


                        </div>
                    </div>


                    <!-- Active project  -->
                    <div class="card no-border card-box p-0">
                        <div class="card-body">
                            <div class="card no-border-grey mb-3 title">
                                <a asp-controller="EmployerDashboard" asp-action="EmpActive"><p class="text-black">Active projects</p></a>
                            </div>
                            @{
                                if (projectCount != null)
                                {
                                    if (hasActive)
                                    {
                                        <p>has Active</p>
                                    }
                                    else
                                    {
                                        <div class="card no-border title-list">
                                            <p>You don't have any active projects</p>
                                            <hr>
                                        </div>
                                        <div class="more">
                                            <a href="companymanageproject.html">More..</a>
                                        </div>
                                    }
                                }
                            }
                            
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- running project -->
                    <div class="card no-border card-box p-0">
                        <div class="card-body">
                            <div class="card no-border-grey mb-3 title">
                                <a asp-controller="EmployerDashboardController" asp-action=""><p class="text-black ">Running projects</p></a>
                            </div>
                            @{
                                if (projectCount != null)
                                {
                                    if (hasRunning)
                                    {
                                        <p>has running</p>
                                    }
                                    else
                                    {
                                        <div class="card no-border title-list">
                                            <p>You don't have any running session</p>
                                            <hr>
                                        </div>
                                        <div class="more">
                                            <a href="companymanageproject.html">More..</a>
                                        </div>
                                    }
                                }
                            }
                            
                        </div>
                    </div>
                    <!-- interview invitation -->
                    <div class="card no-border card-box p-0">
                        <div class="card-body">
                            <div class="card no-border-grey mb-3 title">
                                <a asp-controller="EmployerDashboardController" asp-action=""><p class="text-black ">Interview session</p></a>
                            </div>
                            @{
                                if (projectCount != null)
                                {
                                    if (hasInterview)
                                    {
                                        <p>has Interview</p>
                                    }
                                    else
                                    {
                                        <div class="card no-border title-list">
                                            <p>You don't have any interview session</p>
                                            <hr>
                                        </div>
                                        <div class="more">
                                            <a href="companymanageproject.html">More..</a>
                                        </div>
                                    }
                                }
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
       @* </form>*@
</div>

</body>
</html>