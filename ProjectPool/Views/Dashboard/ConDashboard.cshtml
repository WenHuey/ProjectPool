@model ProjectPool.Models.DashboardModel
@{

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <!-- Bootstrap & Jquery -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- CSS -->
    @*<link rel="stylesheet" href="~/css/NavProfile.css">*@
    <link rel="stylesheet" href="~/css/ProjectDetail.css">
    <link rel="stylesheet" href="~/css/Dashboard.css">
    <!-- icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Jost' rel='stylesheet'>

</head>
<body>


    <!-- project title -->
    <div class="row gutters-sm">
        <div class="col-12">
            <div class="text-black font-weight-bold dashboard">My Dashboard</div>
        </div>
    </div>

    <form>
        <div class="row gutters-sm">
            @{
                var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
                var userID = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value;
                <input hidden id="userID" name="userID" asp-for="UserId" value=@userID />

                //if (projectCount.ActiveCount >= 1)
                //{
                //    hasActive = false;
                //}
                //else if (projectCount.RunningCount >= 1)
                //{
                //    hasRunning = false;
                //}
                //else if (projectCount.PendingCount >= 1)
                //{
                //    hasPending = false;
                //}
                //else if (projectCount.InterviewCount >= 1)
                //{
                //    hasInterview = false;
                //}
                //else if (projectCount.ApplicationCount >= 1)
                //{
                //    hasApplication = false;
                //}
            }

                
            <!-- Projects -->
            <div class="col-md-6">
                <!-- pending project -->
                <div class="card no-border card-box p-0">
                    <div class="card-body">
                        <div class="card no-border-grey mb-3 title">
                            <p class="text-black ">Pending projects</p>
                        </div>
                        <div class="card no-border title-list">
                            <p>You don't have any pending projects</p>
                            <hr>
                        </div>
                        <div class="more">
                            <a href="manageproject.html">More..</a>
                        </div>

                    </div>
                </div>

                <!-- running project  -->
                <div class="card no-border card-box p-0">
                    <div class="card-body">
                        <div class="card no-border-grey mb-3 title">
                            <p class="text-black">Running projects</p>
                        </div>
                        <div class="card no-border title-list">
                            <p>You don't have any running projects</p>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Interview -->
            <div class="col-md-6">
                <!-- interview invitation -->
                <div class="card no-border card-box p-0">
                    <div class="card-body">
                        <div class="card no-border-grey mb-3 title">
                            <p class="text-black ">Interview session</p>
                        </div>
                        <div class="card no-border title-list">
                            <p>You don't have any interview session</p>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </form>



</body>
</html>