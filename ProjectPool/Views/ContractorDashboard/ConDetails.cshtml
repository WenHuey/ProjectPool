@model ProjectPool.Models.ConProfileModel

@{
    ViewData["Title"] = "Company";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Detail</title>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Jost' rel='stylesheet'>

    <link rel="stylesheet" href="~/css/ProjectDetail.css">
    <link rel="stylesheet" href="~/css/ProfileDetails.css">

    <style>

        #project-done {
            align-items: center;
            margin: 2.5rem 1rem 0 1rem;
        }

        #project-done i {
            padding-right: 10px;
            color: green;
        }

        .image {
            width: 100%;
            height: 150px;
            background-image: url(website-portfolio.jpg);
            background-size: cover;
        }

        .project-portfolio {
            border: 0 solid rgba(0,0,0,.125);
            box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);

        }

        #portfolio-title{
            margin-left: 1rem; 
        }

        .no-border {
            border-style: none;
            background-color: none;
            box-shadow: none;
            margin: 1rem;
        }

        .project-portfolio .card-body{
            padding: 1rem !important;
        }

        .portfolio-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

        .add-portfolio {
            color: black;
            padding: 0 10px;
            border: none;
            border-radius: 5px;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 10%), 0 1px 2px 0 rgb(0 0 0 / 6%);
        }

        .add-portfolio:hover{
            background-color: #c1c1c1;
        }

        /* Modal View */
        .modal {
            display: none;
            position: fixed;
            z-index: 8;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
        }

        .modal-content {
            margin: 50px auto;
            border: 1px solid #999;
            width: 60%;
            background-color: white;
        }


        .project {
            padding: 25px;
            margin: 25px;
            box-shadow: 0 2px 5px #f5f5f5;
        }

            .project h2 {
                text-align: center;
            }

        .project-button {
            display: flex;
            margin: 0 15px;
        }

        .project button {
            width: 100%;
            padding: 10px;
            border: none;
            background: #21232d;
            font-size: 16px;
            font-weight: 400;
            color: #fff;
        }

            .project button:hover {
                background: #aaa;
            }

        .close {
            color: #21232d;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover, .close:focus {
                color: #aaa;
                text-decoration: none;
                cursor: pointer;
            }

        button.button {
            background: none;
            border-top: none;
            outline: none;
            border-right: none;
            border-left: none;
            border-bottom: #21232d 1px solid;
            padding: 0 0 3px 0;
            font-size: 16px;
            cursor: pointer;
        }

            button.button:hover {
                border-bottom: #21232d 1px solid;
                color: #21232d;
            }
    </style>

</head>
<body>


    <div class="content">

        @*<input hidden id="ProjectID" name="ProjectID" asp-for="ProjectID" />*@

        <div class="row gutters-sm">
            <div class="col-md-5 mb-3">
                <!-- contact -->
                <div class="card">
                    <div class="card-body m-2">
                        <div class="d-flex flex-column">
                            <!-- <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150"> -->
                            <div class="mt-3">

                                <p id="fullname" class="h5 font-weight-bold mb-4">@Html.DisplayFor(model => model.FullName)</p>
                                <p>@Html.DisplayFor(model => model.ProfileDesc)</p>
                                <div class="grey-label">
                                    <a href="">@Html.DisplayFor(model => model.CategoryName)</a>
                                    <a href="">@Html.DisplayFor(model => model.SubCategoryName)</a>
                                    @if (!string.IsNullOrWhiteSpace(Model.Skills[0]))
                                    {
                                        foreach (var sl in Model.Skills)
                                        {
                                            <a href="">@sl</a>
                                        }
                                    }

                                </div>

                                @if (Model.isCon)
                                {

                                    <div style="margin-top:10px;">
                                        <a href='@Url.Action("EditConProfile","ContractorDashboard", new { id = Model.ContractorID })' class="edit-link mt-1">Edit Profile Details</a>
                                    </div>


                                }
                            </div>
                        </div>
                        <hr>
                        <div class="mb-3">
                            <table class="d-table" style="width:100%">
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Phone)</td>
                                    <td>@Html.DisplayFor(model => model.Phone)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.Address)</td>
                                    <td>@Html.DisplayFor(model => model.Address)</td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </div>

                @if (ViewData["DoneProject"] != "0")
                {
                    <p id="project-done" class="h4 font-weight-bold mb-4"><span><i class="fa-regular fa-circle-check"></i></span>Projects Done</p>
                    @foreach (var item in ViewData["DoneProject"] as IEnumerable<ConProfileModel>)
                    {
                        <!-- description -->
                        <div class="card no-border mb-3">
                            <div class="card-body">
                                <div class="project-desc">
                                    <div class="h4 text-black font-weight-bold mb-3">@item.P_Title</div>
                                    <p class="p-sub" id="p-desc">@item.P_Desc</p>
                                    <div class="grey-label">
                                        <a href="">@item.P_Category</a>
                                        <a href="">@item.P_SubCategory</a>
                                        @foreach (var sl in item.P_Skills)
                                        {
                                            <a href="">@sl</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }



            </div>

            <div class="col-md-7">
                <p id="open-title" class="h4 font-weight-bold"><span style="padding-right: 10px; padding-left: 10px;"><i style="color: #5bd76e; font-size: 20px;" class="fa-solid fa-circle-dot"></i></span>Open Projects</p>
                <div class="row gutters-sm">
                    <div class="col-md-5 mb-3">
                        @*@{
                                foreach (var item in ViewData["ActiveProject"] as IEnumerable<EmpProfileModel>)
                                {
                                    <!-- description -->
                                    <div class="card no-border mb-3">
                                        <div class="card-body">
                                            <div class="project-desc">
                                                <div class="h4 text-black font-weight-bold mb-3">@item.Title</div>
                                                <p class="p-sub" id="p-desc">@item.Description</p>
                                                <p class="p-sub">RM&nbsp;@item.Cost</p>
                                                <p class="p-sub">@item.Duration</p>
                                            </div>
                                        </div>
                                    </div>
                                }

                            }*@
                    </div>
                </div>

                <!-- Portfolio -->
                <div class="portfolio-section">
                    <p id="portfolio-title" class="h4 font-weight-bold">Portfolio</p>
                    <button class="add-portfolio" id="add-new" data-id="@Model.ContractorID" data-target="modal-add" >+ Add new</button>
                </div>

                <div class="row gutters-sm">
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="col-md-6 col-sm-12 mb-3">
                            <div class="project-portfolio">
                                <div class="image"></div>
                                <div class="card-body">
                                    <p class="card-text" style="font-size: 15px;">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>

        </div>

    </div>

    <div id="modal-add" class="modal">
        <div class="modal-content">
            <div class="project">
                <a class="close">&times;</a>
                <form asp-action="DeleteActiveProject">
                    <h2 style="margin-bottom: 20px;">Add New Portfolio</h2>
                    <div class="portfolio-content">
                        <p>
                            <div class="custom-file">
                                <input asp-for="Portfolio" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>

                            <div>
                                <input asp-for="PF_Desc"/>
                            </div>
                            Are you sure you want to delete this project?
                            <br>
                            <strong>* This action cannot be undone.</strong>
                        </p>

                        @Html.Hidden("id", "", new { @class = "hiddenid" })

                    </div>

                    <div class="project-button">
                        <button id="btn-confirm" type="submit">Confirm</button>
                        <button type="submit" class="close">Cancel</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {

            $(".Msg").fadeTo(2000, 500).slideUp(500, function () {
                $(".Msg").slideUp(500);
            });

            $('#add-new').on("click", function (e) {
                e.preventDefault();
                //perform the url load  then
                $('#modal-add').modal({
                    keyboard: true,
                    backdrop: false
                }, 'show');
                var passedID = $(this).data('id');
                $(".project-content-delete .hiddenid").val(passedID);
                return false;
            })


        });

        $('.close').on("click", function (e) {
            e.preventDefault();
            //perform the url load  then
            $('.modal').modal('hide');

            return false;
        })

    </script>
</body>
</html>