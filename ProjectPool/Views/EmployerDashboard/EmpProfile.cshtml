    <link href='https://fonts.googleapis.com/css?family=Jost' rel='stylesheet'>

    <link rel="stylesheet" href="~/css/ProjectDetail.css">

</head>
<body>


    <div class="content">

        <input hidden id="ProjectID" name="ProjectID" asp-for="ProjectID" />
        <!-- project title -->

        <div class="row gutters-sm">
            <!-- one section -->
            <div class="col-md-5 mb-3">
                <!-- contact -->
                <div class="card">
                    <div class="card-body m-2">
                        <div class="d-flex flex-column">
                            <!-- <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150"> -->
                            <div class="mt-3">
                                <p class="h4 font-weight-bold mb-4">Details : </p>
                                <p>Posted by: FullName</p>
                                <p>Posted on: DatePosted</p>
                                @*@if (!string.IsNullOrWhiteSpace(Model.Phone))*@
                                //{
                                <p>Phone: <span><a href="">Phone</a></span></p>
                                //}
                                @*@if (!string.IsNullOrWhiteSpace(Model.Email))*@
                                //{
                                <p>Phone: <span><a href="">Email</a></span></p>
                                //}

                                <!-- <button class="btn btn-primary">Follow</button>
                    <button class="btn btn-outline-primary">Message</button> -->
                            </div>
                        </div>
                        <hr>

                    </div>
                </div>



            </div>

            <div class="col-md-7">
                <!-- description -->
                <div class="card no-border mb-3">
                    <div class="card-body">
                        <div class="project-desc">
                            <div class="h2 text-black font-weight-bold mb-3">Description</div>
                            <h5>
                                sdfsfsdf
                            </h5>
                        </div>
                    </div>
                </div>
                <!-- scope -->
                <div class="card no-border mb-3">
                    <div class="card-body">
                        <div class="project-desc">
                            <div class="h2 text-black font-weight-bold mb-3">Scope</div>
                            <h5>
                                sdfsdfsdfsdfsfsf
                            </h5>
                        </div>
                    </div>
                </div>


            </div>

            
        </div>
    </div>

</body>
</html>